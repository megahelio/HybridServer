<?xml version="1.0"?>
<recetas xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="examplexsd.xsd">
    <receta>
        <titulo>Título de la receta</titulo>
        <id>identificador único</id>
        <comensales>2</comensales>
        <dificultad>Medio</dificultad>
        <ingredientes>
            <ingrediente>
                <nombre>nombre del ingrediente</nombre>
                <medida>litro</medida>
                <cantidad>3</cantidad>
            </ingrediente>
            <!-- más ingredientes -->
        </ingredientes>
        <pasos>
            <paso>
                <orden>1</orden>
                <descripcion>breve descripción</descripcion>
                <detalle>texto adicional</detalle>
            </paso>
            <paso>
                <orden>2</orden>
                <descripcion>breve descripción</descripcion>
                <detalle>texto adicional</detalle>
            </paso>
            <!-- más pasos -->
        </pasos>
        <autores>
            <autor>identificador único del autor</autor>
            <!-- más autores -->
        </autores>
        <descripcion>descripción de la receta</descripcion>
        <!-- tiempo de preparación en minutos -->
        <tiempo>
            120</tiempo>
    </receta>
    <!-- más recetas -->
</recetas>